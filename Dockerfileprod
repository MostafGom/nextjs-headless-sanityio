# Build stage
FROM node:20.11.1-alpine3.18 as build

WORKDIR /home/src/app/nextapp

COPY package*.json ./

RUN npm install

COPY . .

RUN npm run build

RUN chown -R node:node ./node_modules 
RUN chown -R node:node ./.next 
RUN chown -R node:node ./public 

USER node

EXPOSE 3000

CMD ["npm", "start"]

